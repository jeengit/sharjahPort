	xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="true" class="sapUiResponsiveContentPadding">
		<customHeader>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.TopNav" type="XML"/>
		</customHeader>
		<content>
			<VBox class="section">
				<Title text="Dashboard" class="heading"/>
					<l:Grid class="sapUiSmallMarginTopBottom custTile" defaultSpan="L2 M2 S12">
						<l:content>
							<GenericTile ariaLabel="APPROVED/ETA" press="handleListPress" class="tileLayout" header="{i18n>etaTile}" subheader="{i18n>subApprvd}">
								<TileContent unit="" footer="{DashboardCountModel>/0/EtaApproved}">
									<!--<ImageContent src="sap-icon://complete" />-->
								</TileContent>
							</GenericTile>
							<GenericTile ariaLabel="NEW/ETA" press="handleListPress" class="tileLayout" header="{i18n>etaReq}" subheader="{i18n>subReq}">
								<TileContent unit="" footer="{DashboardCountModel>/0/EtaRequest}">
									<!--<ImageContent src="sap-icon://product" />-->
								</TileContent>
							</GenericTile>
							<GenericTile ariaLabel="PENDING/LOG" press="handleListPress" class="tileLayout" header="{i18n>logPending}" subheader="{i18n>subInProg}">
								<TileContent unit="" footer="{DashboardCountModel>/0/LogsheetPending}">
									<!--<ImageContent src="sap-icon://complete" />-->
								</TileContent>
							</GenericTile>
							<GenericTile ariaLabel="CLOSED/LOG" press="handleListPress" class="tileLayout" header="{i18n>logclosed}" subheader="{i18n>agentPay}">
								<TileContent unit="" footer="{DashboardCountModel>/0/LogsheetClosed}">
									<!--<ImageContent src="sap-icon://product" />-->
								</TileContent>
							</GenericTile>
							<GenericTile  class="tileLayout" header="{i18n>PortClearance}" subheader="{i18n>subPcReq}">
								<TileContent unit="" footer="{DashboardCountModel>/0/PortClearance}">
									<!--<ImageContent src="sap-icon://complete" />-->
								</TileContent>
							</GenericTile>
						</l:content>
					</l:Grid>
			</VBox>
			<VBox class="section">
				<html:div>
					<IconTabBar select="handleTabPress" expandable="false" class="tabs">
						<items>
							<IconTabFilter text="{i18n>bertOver}" key="info">
								<List class="cardList" headerText="{i18n>bertOver}" mode="None" items="{path: 'berthModel>/results'}">
									<CustomListItem>
										<FlexBox alignItems="Center">
											<HBox justifyContent="Center" class="boxLeft" width="20%"><Text text="{berthModel>count}"/></HBox>
											<HBox direction="Column" width="70%" class="sapUiTinyMargin">
												<Text class="title" text="{berthModel>title}"/>
												<Label class="desc" text="{berthModel>desc}"/>
											</HBox>
											<HBox class="sapUiTinyMarginEnd" justifyContent="End" width="10%"><core:Icon src="sap-icon://circle-task-2" color="{= ${berthModel>status} === 'completed' ? 'green' : 'red' }"/></HBox>
										</FlexBox>
									</CustomListItem>
								</List>
							</IconTabFilter>
						<IconTabFilter text="{i18n>mapView}" key="map">
								<FlexBox width="100%" height="390px">
									<HBox width="100%" height="390px" id="map_canvas" fitContainer="true" justifyContent="Center" alignItems="Center" />
								</FlexBox>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</html:div>
