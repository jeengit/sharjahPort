												text="{ path: 'etaListModel>ExpArrivalDate', type: 'sap.ui.model.type.Date', formatOptions: {source: {pattern: 'dd/MM/yyyy'}, style: 'long'} }"
												wrapping="false" class="dateDisp"/>
										</HBox>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="{i18n>ETD}"/>
