<mvc:View controllerName="com.demo.sharjahPort.controller.customer.customerETAList" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	displayBlock="true" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns:tnt="sap.tnt">
	<Page showHeader="true" class="sapUiResponsiveContentPadding">
		<customHeader>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.TopNav" type="XML"/>
		</customHeader>
		<content>
			<VBox>
				<l:Grid class="sapUiContentPadding" defaultSpan="L12 M12 S12">
					<l:content>
						<Breadcrumbs currentLocationText="ETA List">
							<Link press="onHomePress" text="Home"/>
						</Breadcrumbs>
						<t:Table class="card tableCard" id="table" rows="{etaListModel>/results}" selectionMode="MultiToggle" visibleRowCount="10"
							ariaLabelledBy="title">
							<t:extension>
								<OverflowToolbar style="Clear">
									<Title id="title" text="{i18n>ETATable} ({etaListModel>/results/length})"/>
									<ToolbarSpacer/>
									<Button type="Transparent" tooltip="{i18n>CreateETA}"
										visible="{= ${etaListModel>/results/0/Status} === 'NEW' &amp;&amp; ${loginModel>/uRole} === 'AGENT' ? true : false }" press="gotoCreatEta"
										text="{i18n>CreateETA}">
										<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
									</Button>
									<core:Icon src="sap-icon://sorting-ranking" tooltip="{i18n>sort}" press="sortCategoriesAndName"/>
									<core:Icon src="sap-icon://sort" tooltip="{i18n>SortCategories}" press="sortCategories"/>
									<core:Icon src="sap-icon://decline" tooltip="{i18n>Clearallsortings}" press="clearAllSortings"/>
								</OverflowToolbar>
							</t:extension>
							<t:columns>
								<t:Column sortProperty="ETANo">
									<Label text="{i18n>ETANumber}"/>
									<t:template>
										<Link press="onETADetailsPress" text="{etaListModel>ETANo}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column sortProperty="PortName" id="categories">
									<Label text="{i18n>PortName}"/>
									<t:template>
										<Text text="{etaListModel>PortName}"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="{i18n>AgentID}"/>
									<t:template>
										<Text text="{etaListModel>AgentCode}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="{i18n>AgentName}"/>
									<t:template>
										<Text text="{etaListModel>AgentName}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="{i18n>VesselName}"/>
									<t:template>
										<Text text="{etaListModel>VesselName}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="{i18n>CustomsRefNo}"/>
									<t:template>
										<Text text="{etaListModel>IMONumber}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="{i18n>Status}"/>
									<t:template>
										<!--<ObjectStatus active="true" text="{etaListModel>Status}"-->
										<!--	state="{= ${etaListModel>Status} === 'NEW' ? 'Information' : 'Warning' }"/>-->
										<tnt:InfoLabel class="sapUiTinyMarginTop" text="{etaListModel>Status}" displayOnly="true"
											colorScheme="{= ${etaListModel>Status} === 'NEW' ? 8 : 3 }"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="{i18n>ETA}"/>
									<t:template>
										<HBox>
											<!--<core:Icon color="#8c8a8a" src="sap-icon://calendar" tooltip="Expected Arrival Date"/>-->
											<Text
												text="{ path: 'etaListModel>ExpArrivalDate', type: 'sap.ui.model.type.Date', formatOptions: {source: {pattern: 'dd/MM/yyyy'}, style: 'long'} }"
												wrapping="false" class="dateDisp"/>
										</HBox>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="{i18n>ETD}"/>
									<t:template>
										<HBox>
											<!--<core:Icon color="#8c8a8a" src="sap-icon://calendar" tooltip="Expected Departure Date"/>-->
											<Text
												text="{ path: 'etaListModel>ExpDepartureDate', type: 'sap.ui.model.type.Date', formatOptions: {source: {pattern: 'dd/MM/yyyy'}, style: 'long'} }"
												wrapping="false" class="dateDisp"/>
										</HBox>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</l:content>
				</l:Grid>
			</VBox>
		</content>
	</Page>
</mvc:View>