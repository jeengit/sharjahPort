<mvc:View controllerName="com.demo.sharjahPort.controller.customer.customerLoginOTP"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" displayBlock="true"
	xmlns:core="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false" class="initialPage">
		<customHeader>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.TopNav" type="XML"/>
		</customHeader>
		<content>
			<VBox class="sapUiContentPadding">
				<HBox class="sapUiSmallMarginTopBottom" alignItems="Start" justifyContent="Center">
					<Image src="images/hll_logo.png"/>
				</HBox>
				<f:Form>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="3" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="">
									<f:fields>
										<Text text="An OTP has been sent to your registered mobile number"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="">
									<f:fields>
										<Input type="number" placeholder="Enter OTP" id="name"/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
				<HBox direction="Column" alignItems="Center" justifyContent="Center">
					<Text class="sapUiMediumMarginBottom" text="Resend OTP?"/>
					<Button icon="sap-icon://account" type="Emphasized" text="Proceed" press="onPress" />
				</HBox>
				<HBox alignItems="Start" justifyContent="Center">
					<Text renderWhitespace="true" text="Already a member? "/>
					<Link text="Log In" press="onNavToPress" id="loginC"/>
				</HBox>
			</VBox>
		</content>
	</Page>
</mvc:View>