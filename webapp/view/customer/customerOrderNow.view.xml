<mvc:View controllerName="com.demo.sharjahPort.controller.customer.customerOrderNow"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Page showHeader="true" class="initialPage">
        <customHeader>
            <core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.TopNav" type="XML"/>
        </customHeader>
        <content>
            <l:Grid class="sapUiContentPadding sapUiSmallMarginTopBottom" defaultSpan="L12 M12 S12">
                <l:content>
                    <FlexBox alignItems="Center" justifyContent="Center">
                        <Label text="Order Now" design="Bold" wrapping="true"/>
                    </FlexBox>
                    <List mode="None">
                        <CustomListItem class="sapUiSmallMarginBottom" type="None" press="onDetailPress" id="orderNowDetails">
                            <HBox class="sapUiSmallMargin">
                                <core:Icon size="2rem" src="sap-icon://attachment-photo" class="sapUiSmallMarginEnd"/>
                                <FlexBox width="100%">
                                    <VBox width="50%">
                                        <Text text="{ProductOrderNowListModel>/name}"/>
                                        <Label text="{ProductOrderNowListModel>/id}"/>
                                    </VBox>
                                    <VBox width="50%" justifyContent="Bottom" alignItems="End">
                                        <!-- <ObjectNumber class="sapUiSmallMarginBottom" number="{
                                                parts:[{path:'ProductOrderNowListModel>/price'},{path:'INR'}],
                                                type: 'sap.ui.model.type.Currency',
                                                formatOptions: {showMeasure: true}
                                            }" unit="INR" state="Success" /> -->
                                        <StepInput textAlign="Center" value="{ProductOrderNowListModel>/quantity}" min="1" max="50" width="7rem"/>
                                    </VBox>
                                </FlexBox>
                            </HBox>
                        </CustomListItem>
                    </List>
                    <FlexBox justifyContent="Center" alignItems="Center" width="100%">
                        <Button id="continueOrder" press="onNavToPress" text="Proceed" width="100%"/>
                    </FlexBox>
                </l:content>
            </l:Grid>
        </content>
    </Page>
</mvc:View>