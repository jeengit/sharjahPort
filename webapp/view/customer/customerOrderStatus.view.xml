<mvc:View controllerName="com.demo.sharjahPort.controller.customer.customerOrderStatus"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:u="sap.ui.unified"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml">
    <Page showHeader="true" class="initialPage">
        <customHeader>
            <core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.TopNav" type="XML"/>
        </customHeader>
        <content>
            <l:Grid class="sapUiContentPadding sapUiSmallMarginTopBottom" defaultSpan="L12 M12 S12">
                <l:content>
                    <FlexBox alignItems="Center" justifyContent="Center">
                        <Label text="Order Status" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
                    </FlexBox>
                    <VBox class="orderStatus bg-light">
                        <ObjectHeader title="{orderListModel>/name}">
                            <ObjectAttribute title="Order ID " text="1234" active="true" />
                            <ObjectAttribute title="Ordered On " text="30 May 2021" active="true" />
                        </ObjectHeader>
                        <l:VerticalLayout class="sapUiSmallMarginBegin sapUiSmallMarginBottom">
                            <ObjectStatus inverted="true" text="Order placed" icon="sap-icon://message-warning" state="Success" />
                            <HBox height="1.2rem"/>
                            <ObjectStatus inverted="true" text="Order accepted" icon="sap-icon://message-information" state="Success" />
                            <HBox height="1.2rem"/>
                            <ObjectStatus inverted="false" text="Order in progress" icon="sap-icon://message-information" state="Success" />
                            <HBox height="1.2rem"/>
                            <ObjectStatus inverted="false" text="Installation completed" icon="sap-icon://message-success" state="Success" />
                        </l:VerticalLayout>
                        <VBox class="sapUiContentPadding">
                        <TextArea placeholder="Delivery Address" growing="true" growingMaxLines="7" width="100%"/>
                        </VBox>
                        <VBox class="sapUiSmallMarginBottom" justifyContent="Center" alignItems="Center" width="100%">
                        <Button press="" text="Confirm Installation Status" width="100%"/>
                    </VBox>
                    </VBox>
                </l:content>
            </l:Grid>
        </content>
    </Page>
</mvc:View>