<mvc:View controllerName="com.demo.sharjahPort.controller.customer.customerRegistration"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" displayBlock="true"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false" class="initialPage" title="Mandatory Configuration">
		<content>
			<VBox class="sapUiContentPadding">
				<HBox class="sapUiSmallMarginTopBottom" alignItems="Start" justifyContent="Center">
					<Image src="images/hll_logo.png"/>
				</HBox>
				<f:Form>
					<f:layout>
						<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="3" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="">
									<f:fields>
										<Input placeholder="Name" id="name"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="">
									<f:fields>
										<Input placeholder="Mobile Number" id="pwd"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="">
									<f:fields>
										<Input type="email" placeholder="Email" id="email"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="">
									<f:fields>
										<Input placeholder="Location" id="location"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="">
									<f:fields>
										<Select forceSelection="false" selectedKey="1">
											<core:Item key="1" text="User" />
											<core:Item key="2" text="Dealer" />
										</Select>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="">
									<f:fields>
										<Input placeholder="Organization / Entity" id="org-entity"/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="">
									<f:fields>
										<Button icon="sap-icon://account" type="Emphasized" text="Proceed" press="onPress" />
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
				<HBox alignItems="Start" justifyContent="Center">
					<Text renderWhitespace="true" text="Already a member? "/>
					<Link text="Log In" press="onNavToPress" id="loginC"/>
				</HBox>
			</VBox>
		</content>
	</Page>
</mvc:View>