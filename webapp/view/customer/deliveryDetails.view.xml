<mvc:View controllerName="com.demo.sharjahPort.controller.customer.deliveryDetails" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	displayBlock="true" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="detailspage" showHeader="true" class="sapUiResponsiveContentPadding detailspage">
		<customHeader>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.TopNav" type="XML"/>
		</customHeader>
		<content>
				<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.deliveryDisplay" type="XML"/>
				<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.deliveryDetails" type="XML"/>
				<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.deliverySave" type="XML"/>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button id="createbillBtn" type="Accept" text="Create Bill" visible="false" press="handleCreatePress"/>
					<Button id="apprvBtn" type="Accept" text="Approve" visible="false" press="handleApprove"/>
						<Button id="saveBtn" type="Accept" text="Save" visible="false" press="handleSavePress"/>
				<Button id="cancelBtn" type="Reject" text="Cancel" visible="false" press="handleCreatePress"/>
				<Button id="crtBtn" type="Emphasized" text="Create Delivery" visible="false" press="deliveryCreatePress"/>
				
				<Button id="editBtn" type="Emphasized" text="Edit" visible="false" press="handleEditPress"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>