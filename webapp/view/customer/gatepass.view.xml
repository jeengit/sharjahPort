<mvc:View controllerName="com.demo.sharjahPort.controller.customer.gatepass" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" displayBlock="true"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="page" showHeader="true" class="sapUiResponsiveContentPadding detailspage">
		<customHeader>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.TopNav" type="XML"/>
		</customHeader>
		<content>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.gatePassCreate" type="XML"/>
				<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.gatepassDet" type="XML"/>
		</content>
		<footer>
			<OverflowToolbar id="otbFooter">
				<ToolbarSpacer/>
				<Button press="onCreatePress" id="subId" type="Accept" text="Submit">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
				</Button>
				<Button press="handleAcceptRejectPress"  id="canId" type="Reject" text="Cancel">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
				</Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>