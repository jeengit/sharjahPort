<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.demo.sharjahPort.controller.customer.tallySheetCargo" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="true" class="sapUiResponsiveContentPadding detailspage">
		<customHeader>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.TopNav" type="XML"/>
		</customHeader>
		<content>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.tallySheetCargoChange" type="XML"/>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.tallySheetCargoDisplay" type="XML"/>
			<core:Fragment fragmentName="com.demo.sharjahPort.view.fragments.tallySheetCargoSave" type="XML"/>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button id="creteBtn" visible="{= ${tSCrtModel>/TallySheetCode} === '' ? false : true }" type="Emphasized" text="Create Bill"/>
				<Button id="saveBtn" visible="false" type="Emphasized" text="Save" press="onTallyUpdatePress"/>
				<Button id="editBtn" visible="false" type="Emphasized" text="Edit" press="editPress"/>
				<Button id="tallyBtn" visible="false" press="tallyCrtPress" type="Emphasized"
					text="Create"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>