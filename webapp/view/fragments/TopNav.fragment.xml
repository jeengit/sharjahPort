<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Bar class="headerBar">
		<contentLeft>
			<Image src="images/image.png" width="8rem" height="2.7rem" class="logo-cls"/>
		</contentLeft>
		<contentMiddle></contentMiddle>
		<contentRight>
			<Button id="createEta" visible="{= ${loginModel>/uRole} === 'AGENT' ? true : false }" class="sapUiTinyMarginEnd btn-sm text-light" text="{i18n>CreateETA}" press="gotoCreatEta"/>
			<core:Icon color="#333" class="sapUiTinyMarginEnd" size="1rem" src="sap-icon://search" press="onPress" ariaLabelledBy="actionButtonLabel"/>
			<core:Icon color="#333" class="sapUiTinyMarginEnd" size="1rem" src="sap-icon://bell" press="onPress" ariaLabelledBy="actionButtonLabel"/>
			<MenuButton menuPosition="CenterBottom" text="{loginModel>/name}">
				<menu>
					<Menu>
						<MenuItem text="Logout" icon="sap-icon://log" press="handleLogOut"/>
					</Menu>
				</menu>
			</MenuButton>
		</contentRight>
	</Bar>
</core:FragmentDefinition>