<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Hot Works" class="dialogBox objLayoutClass editMode" id="hotWorksDialog">
		<content>
			<FlexBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop" direction="Column">
				<HBox width="100%" alignItems="Center" class="sapUiTinyMarginEnd">
					<HBox width="40%">
						<Label text="{i18n>CallSign}" class="sapUiTinyMarginEnd"/>
					</HBox>
					<HBox width="60%">
						<ComboBox change="handleCallSignHotWorks" value="{hotWorksModel>/CallSign}" placeholder="Call Sign" width="100%" items="{callSignModel>/}">
							<core:Item key="{callSignModel>CallSign}" text="{callSignModel>CallSign}"/>
						</ComboBox>
					</HBox>
				</HBox>
				<HBox width="100%" alignItems="Center" class="sapUiTinyMarginEnd">
					<HBox width="40%">
						<Label text="Port" class="sapUiTinyMarginEnd"/>
					</HBox>
					<HBox width="60%">
						<Input enabled="false" value="{hotWorksModel>/Port}"/>
					</HBox>
				</HBox>
			</FlexBox>
			<FlexBox class="sapUiSmallMarginBeginEnd" direction="Column">
				<HBox width="100%" alignItems="Center" class="sapUiTinyMarginEnd">
					<HBox width="40%">
						<Label text="{i18n>VesselName}" class="sapUiTinyMarginEnd"/>
					</HBox>
					<HBox width="60%">
						<Input enabled="false" value="{hotWorksModel>/VesselName}"/>
					</HBox>
				</HBox>
				<HBox width="100%" alignItems="Center" class="sapUiTinyMarginEnd">
					<HBox width="40%">
						<Label text="IMO Number" class="sapUiTinyMarginEnd"/>
					</HBox>
					<HBox width="60%">
						<Input enabled="false" value="{hotWorksModel>/ImoNo}"/>
					</HBox>
				</HBox>
			</FlexBox>
			<FlexBox class="sapUiSmallMarginBeginEnd" direction="Column">
				<HBox width="100%" alignItems="Center" class="sapUiTinyMarginEnd">
					<HBox width="40%">
						<Label text="ETA Number" class="sapUiTinyMarginEnd"/>
					</HBox>
					<HBox width="60%">
						<Input enabled="false" value="{hotWorksModel>/EtaNo}"/>
					</HBox>
				</HBox>
				<HBox width="100%" alignItems="Center" class="sapUiTinyMarginEnd">
					<HBox width="40%">
						<Label text="Agent Name" class="sapUiTinyMarginEnd"/>
					</HBox>
					<HBox width="60%">
						<Input enabled="false" value="{hotWorksModel>/AgentName}"/>
					</HBox>
				</HBox>
			</FlexBox>
			<FlexBox class="sapUiSmallMarginBeginEnd sapUiSmallMarginBottom" direction="Column">
				<HBox width="100%" alignItems="Center" class="sapUiTinyMarginEnd">
					<HBox width="40%">
						<Label text="Agent Code" class="sapUiTinyMarginEnd"/>
					</HBox>
					<HBox width="60%">
						<Input enabled="false" value="{hotWorksModel>/AgentCode}"/>
					</HBox>
				</HBox>
				<HBox width="100%" alignItems="Center" class="sapUiTinyMarginEnd">
					<HBox width="40%">
						<Label text="Puropse" class="sapUiTinyMarginEnd"/>
					</HBox>
					<HBox width="60%">
						<TextArea width="100%" value="{hotWorksModel>/Purpose}"/>
					</HBox>
				</HBox>
			</FlexBox>
		</content>
		<beginButton>
			<Button class="btn-sm" type="Reject" text="Cancel" press="closeHotWorkPopup"/>
		</beginButton>
		<endButton>
			<Button tooltip="CREATE" enabled="{= ${hotWorksModel>/CallSign} !== '' ? true: false}" class="btn-sm btn-primary text-light" type="Emphasized" text="Create" press="handleCreateHotWorks"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>